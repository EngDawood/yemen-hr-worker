{
  "name": "yemen-hr-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker that monitors Yemen HR for new jobs and posts to Telegram",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:scheduled": "wrangler dev --test-scheduled",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.0",
    "wrangler": "^4.61.1"
  }
}
